{
  "name": "simple-bulletin-express",
  "version": "1.0.0",
  "description": "Example API on using create-react-app with a Node Express Backend & Async/ Await",
  "author": {
    "name": "JustEd",
    "twitter": "@_ppcms1",
    "url": "https://react7.press/"
  },
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "dev:server": "cd client && yarn build && cd .. && yarn start",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "concurrently": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react7press/simplereact7bb.git"
  },
  "bugs": {
    "url": "https://github.com/react7press/simplereact7bb/issues"
  },
  "keywords": [
    "node",
    "express",
    "create-react-app"
  ]
